@{
    ViewBag.Title = "My LunchDecider";
}

<header>
    <h1 style="color: darkblue">@ViewBag.Title</h1>
    @Styles.Render("//cdnjs.cloudflare.com/ajax/libs/toastr.js/1.3.1/css/toastr.min.css")
    @Styles.Render("~/content/css")
</header>

<div id="main-content" data-ng-app="lunchDecider">
<div data-ng-view></div>
</div>

@section scripts {
    @Scripts.Render("http://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.4.4/underscore-min.js")
    @Scripts.Render("//cdnjs.cloudflare.com/ajax/libs/toastr.js/1.3.1/js/toastr.min.js")
    @Scripts.Render("//ajax.googleapis.com/ajax/libs/jquery/1.8/jquery.min.js")
    @Scripts.Render("~/js")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/lunchDecider")
    <script type="text/javascript">
        toastr.options = {
            "debug": false,
            "positionClass": "toast-top-full-width",
            "onclick": null,
            "fadeIn": 300,
            "fadeOut": 1000,
            "timeOut": 5000,
            "extendedTimeOut": 1000
        };
    </script>
}
